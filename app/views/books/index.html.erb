
<h1>Books</h1>

<table>
  <theade>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </theade>
  <tbody></tbody>
</table>

  <h2>New book</h2>

  <%= from_with model: Book.new do |f| %>
      <label for="book_title">Title</label>
      <%= f.text_field :title %>

      <label for="book_body">Body</label>
      <%= f.text_area :body %>

      <%= f.submit 'Create Book' %>
  <% end %>

