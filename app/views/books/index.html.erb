<h1>Books</h1>

  <table>
    <% @books.each do |book| %>

      <thead>
       <th>Title</th>
       <th>Body</th>
       <th colspan="3"></th>
      </thead>

      <tbody>
       <span><%= book.title %></span>
       <span><%= book.body %></span>

      </tbody>

     <% end %>


   </table>




  <h2>New book</h2>
 <div class="form">
  <%= form_with model: @book, url: '/books',  method: :post do |f| %>

      <label for="book_title">Title</label><br>
      <%= f.text_field :title %><br>

      <label for="book_body">Body</label><br>
      <%= f.text_area :body %><br>

      <%= f.submit 'Create Book' %>
  <% end %>
 </div>
